{{!-- Top Image --}}
<div class="container">
    <img src="/assets/img/burger.jpeg" alt="Cartoon burger">
</div>

{{!-- Title --}}
<h1>Eat Da Burger!</h1>

{{!-- Left Column | Burgers to be eaten --}}
<div class="container">
    <div class="left-col">
        <h2>Eat Me!</h2>
        {{#each burgers}}
            {{#unless devoured}}
                <div>
                    <p data-id="{{id}}">{{id}}. {{burger_name}} <button class="update" data-id="{{id}}">Devour!</button></p>
                </div>
            {{/unless}}
        {{/each}}
    </div>

{{!-- Right Column | Eaten Burgers --}}
    <div class="right-col">
        <h2>Already Eaten...</h2>
        {{#each burgers}}
            {{#if devoured}}
                <p class="eaten" data-id="{{id}}">{{id}}. {{burger_name}}</p>
            {{/if}}
        {{/each}}
    </div>
</div>

{{!-- Add Burger Form --}}
<div class="container add-burger">
    <form class="add-form">
        <div class="input">
            <label for="burger">Burger Name:</label>
            <input type="text" id="burger" name="name">
        </div>

        <button type="submit">Add Burger</button>
    </form>
</div>